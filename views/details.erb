<h1>Post details:</h1>
    <p>
        <%= @row['content']%>
        <br />
        Added at <%= @row ['created_date']%>
    </p>
<h2>Comments:</h2>

<% @comments.each do |comment| %>
    <p>
        <%= comment['content'] %>
        <br />
        <span style="font-size:75%;">Added at <%= comment ['created_date']%></span>
    </p>
    <hr />
<% end %>

<br />
<form action="/details/<%= @row ['id']%>" method="POST" role="form">
  <div class="form-group">
    <textarea name="content" class="form-control" id="exampleTextarea" rows="3" placeholder="Add comment text here"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Add comment</button>
</form>